@model IEnumerable<JobRequirementResponseModel>;

<div class="page-header">
    <h1>List of Employees</h1>
</div>

<a asp-action="Create" asp-controller="JobRequirement">Add New Job Requirement</a>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Total Positions</th>
            <th>Posting Date</th>
            <th>Closing Date</th>
            <th>Job Category Id</th>
            <th>Is Active</th>
            <th colspan="2">Options</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var m in Model)
            {
                <tr>
                    <td>@m.Title</td>
                    <td>@m.Description</td>
                    <td>@m.TotalPositions</td>
                    <td>@m.PostingDate</td>
                    <td>@m.ClosingDate</td>
                    <td>@m.JobCategoryId</td>
                    <td>@m.IsActive</td>
                    <td><a asp-action="Edit" asp-controller="JobRequirement" asp-route-id="@m.Id">Edit</a></td>
                    <td><a asp-action="Delete" asp-controller="JobRequirement" asp-route-id="@m.Id">Delete</a></td>
                </tr>
            }
        }
    </tbody>
</table>