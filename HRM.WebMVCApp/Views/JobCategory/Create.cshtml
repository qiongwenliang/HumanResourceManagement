@model JobCategoryRequestModel
<div class="container">
    <form asp-controller="JobCategory" asp-action="Create" method="post">
        <div class="my-5 row col-12">
            <label for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="my-5 row col-12 form-check">
            <label for="IsActive">IsActive</label>
            <input type="checkbox" class="form-check-input" asp-for="IsActive">
            <span asp-validation-for="IsActive"></span>
        </div>
        <input type="submit" value="Add Job Category" class="btn btn-primary" />
    </form>
</div>