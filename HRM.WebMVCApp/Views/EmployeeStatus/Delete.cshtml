@model EmployeeStatusResponseModel
<div class="container">
    <form asp-controller="EmployeeStatus" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="my-5 row col-12">
            <label for="Type">Type</label>
            <input asp-for="Type" class="form-control" disabled />
            <span asp-validation-for="Type"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="Description">Description</label>
            <input asp-for="Description" class="form-control" disabled />
            <span asp-validation-for="Description"></span>
        </div>
        <div class="my-5 row col-12 form-check">
            <label for="IsActive">IsActive</label>
            <input type="checkbox" class="form-check-input" asp-for="IsActive" disabled>
            <span asp-validation-for="IsActive"></span>
        </div>
        <input type="submit" value="Add Employee Status" class="btn btn-danger" />
    </form>
</div>
